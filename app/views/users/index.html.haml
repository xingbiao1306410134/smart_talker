:css
  .login{
    position: absolute;
    padding-left:60%;
    padding-top:20%;
  }
%h1
  = @notice
.login
  = form_for(@user,url:login_users_url,method:'post') do |f|
    .row
      %span 用户名：
      = f.text_field :username,class:'form-control'
    .row
      %span 密码：
      = f.text_field :password,class:'form-control'
    = f.submit '登录',class:'btn btn-primary'
    = link_to '注册', new_user_url(new_user:'true'),class:'btn btn-primary'
